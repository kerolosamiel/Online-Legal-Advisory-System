@model ClientFilter

<div class="filters-container mb-4">
    <form asp-action="Index" method="get" class="d-flex gap-5 justify-content-between align-items-center">
        <div class="inputs-container d-flex align-items-center gap-4">
            <div>
                <input type="text" class="search-input" placeholder="Search by Name or Email"
                       asp-for="SearchTerm"/>
            </div>
            <div>
                <select class="select" asp-for="IsActive">
                    <option selected>All status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>


        <div>
            <button type="submit" class="button">
                <i class="fas fa-filter"></i> Apply Filters
            </button>
        </div>
    </form>
</div>