@model ELawyer.Models.ViewModels.Admin.Client.PaginatedList<ELawyer.Models.ViewModels.Admin.Client.ClientItemVm>

<table class="table table-hover">
    <thead class="table-primary">
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Create At</th>
        <th>Status</th>
        <th>Transactions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.FullName</td>
            <td>@client.Email</td>
            <td>@client.RegistrationDate</td>
            <td>
                <span class="status-badge @(client.Status == "Active" ? "active" : "inactive")">
                    @client.Status
                </span>
            </td>
            <td class="actions">
                <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i>
                </a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@client.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>