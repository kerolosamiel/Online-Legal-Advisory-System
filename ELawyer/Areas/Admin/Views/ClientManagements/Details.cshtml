@model ClientDetailsVm

@{
    ViewData["Title"] = "Client details";
    Layout = "_AdminLayout";
}

<div class="client-details">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">@Model.FullName</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Registration Date</dt>
                <dd class="col-sm-9">@Model.RegistrationDate</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="status-badge @(Model.Status == "Active" ? "active" : "inactive")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
    </div>
</div>