@model Rating
@{
    ViewData["Title"] = "Rate Lawyer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Client/client.css" asp-append-version="true"/>

<div class="max-w-xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Rate Lawyer</h2>

    <form asp-action="RatingPost" method="post" class="bg-white shadow rounded-lg p-6">
        <div class="mb-4">
            <label asp-for="Rate" class="block text-gray-700 font-medium mb-2">Rating</label>
            <input asp-for="Rate" type="number" min="1" max="5" class="w-full px-4 py-2 border rounded-lg"/>
        </div>
        <div class="mb-4">
            <label asp-for="Comment" class="block text-gray-700 font-medium mb-2">Comment</label>
            <textarea asp-for="Comment" class="w-full px-4 py-2 border rounded-lg"></textarea>
        </div>
        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700">Submit</button>
    </form>
</div>