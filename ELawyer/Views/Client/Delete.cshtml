@model Client
@{
    ViewData["Title"] = "Delete Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Client/client.css" asp-append-version="true"/>

<div class="max-w-lg mx-auto px-4 py-10">
    <div class="bg-white shadow-md rounded-xl p-6 text-center">
        <h2 class="text-2xl font-bold text-red-600 mb-4">Delete Your Account</h2>

        <img src="~/@(string.IsNullOrEmpty(Model.ImageUrl) ? "images/Public/Profile-Avatar.png" : Model.ImageUrl)"
             alt="Profile Picture" class="mx-auto mb-4 w-24 h-24 rounded-full object-cover"/>

        <p class="text-gray-700 mb-2">
            <strong>Name:</strong> @Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</p>
        <p class="text-gray-500 mb-6"><strong>Email:</strong> @Model.ApplicationUser.Email</p>

        <p class="text-red-500 font-medium mb-6">Are you sure you want to delete your account? This action is
            irreversible.</p>

        <form asp-action="Delete" method="post" class="flex justify-center gap-4">
            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white font-semibold px-5 py-2 rounded-lg transition">
                Yes, Delete
            </button>
            <a asp-action="Index"
               class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-5 py-2 rounded-lg transition">
                Cancel
            </a>
        </form>
    </div>
</div>