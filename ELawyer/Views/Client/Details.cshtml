@model Lawyer
@{
    ViewData["Title"] = "Client Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Client/client.css" asp-append-version="true"/>

<div class="max-w-xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Client Profile</h2>
    <div class="bg-white shadow-md rounded-lg p-6">
        <img src="~/@(string.IsNullOrEmpty(Model.ImageUrl) ? "images/Public/Profile-Avatar.png" : Model.ImageUrl)"
             alt="Profile" class="w-32 h-32 mx-auto rounded-full object-cover mb-4">
        <div class="text-center">
            <h3 class="text-xl font-semibold text-gray-800">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</h3>
            <p class="text-gray-500">@Model.ApplicationUser.Email</p>
        </div>
    </div>
</div>