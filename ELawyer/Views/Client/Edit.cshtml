@model Client
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Client/client.css" asp-append-version="true"/>


<div class="max-w-2xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Edit Profile</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-white shadow rounded-lg p-6">
        <input type="hidden" asp-for="Id"/>
        <div class="mb-4">
            <label asp-for="ApplicationUser.FirstName" class="block text-gray-700 font-medium mb-2"></label>
            <input asp-for="ApplicationUser.FirstName"
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
        </div>
        <div class="mb-4">
            <label asp-for="ApplicationUser.LastName" class="block text-gray-700 font-medium mb-2"></label>
            <input asp-for="ApplicationUser.LastName"
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
        </div>
        <div class="mb-4">
            <label asp-for="ApplicationUser.Email" class="block text-gray-700 font-medium mb-2"></label>
            <input asp-for="ApplicationUser.Email"
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                   readonly/>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Upload New Image</label>
            <input type="file" name="file" class="w-full text-sm text-gray-600"/>
        </div>
        <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Update
        </button>
    </form>
</div>