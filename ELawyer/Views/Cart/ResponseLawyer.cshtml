@using ELawyer.Models.ViewModels
@model ResponseConsultationViewModel

@{
    ViewData["Title"] = "ResponseLawyer";
}

<h1>ResponseLawyer</h1>

<h4>Response</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResponseLawyerPost" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Consultation.ClientID" hidden />
            <div class="form-group">
                <label asp-for="@Model.Response.Title" class="control-label"></label>
                <input asp-for="@Model.Response.Title" class="form-control"  required/>
                <span asp-validation-for="@Model.Response.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Response.Description" class="control-label"></label>
                <input asp-for="@Model.Response.Description" class="form-control"  required/>
                <span asp-validation-for="@Model.Response.Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="@Model.Response.Attachments" class="control-label"></label>
                <input asp-for="@Model.Response.Attachments" class="form-control"  type="file" name="file"/>
                <span asp-validation-for="@Model.Response.Attachments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
