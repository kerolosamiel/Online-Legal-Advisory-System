@using ELawyer.Models
@model Payment


@{
    ViewData["Title"] = "Cartitem";

}

<h1>CaetItem</h1>

<h4>Lawyer</h4>
<div class="col-md-4 mb-4">
    <div class="card shadow-sm">

        <div class="card-text">

           

            
            <div>
                <label> Name: @Model.Lawyer.FirstName  @Model.Lawyer.LastName </label>

            </div>
           

         
            <div>
                <label> ConsultationFee: @Model.Lawyer.ConsultationFee</label>

            </div>
            <div>
                <label>TotalAmount: @Model.Amount</label>

            </div>

            


       
        @if (Model.Lawyer.AverageRateing != null)
        {
            <h3>متوسط التقييم:</h3>
            <div class="star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Round(Model.Lawyer.AverageRateing ?? 0))
                    {
                        <span class="star selected">&#9733;</span> 
                    }
                    else
                    {
                        <span class="star">&#9734;</span> 
                    }
                }
            </div>
        }
           



           

        }
       
       
        <div>
            <a asp-controller="Lawyer" asp-action="Index">Back to List</a>
        </div>

            <div class="d-flex justify-content-center mt-4">
                <a asp-action="DeleteCartitem"  class="btn btn-danger">Delete</a>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <a asp-action="PaymentStripe" asp-route-id="@Model.Id" class="btn btn-danger">Pay</a>
            </div>
    </div>
    </div>
</div>
<style>
    .star-rating .star {
        font-size: 24px;
        color: #ccc; 
    }

        .star-rating .star.selected {
            color: #ffc107;
        }

    .star-rating {
        direction: rtl;
        display: inline-block;
    }

    .star {
        font-size: 1.5rem;
        color: #ccc;
    }

        .star.selected {
            color: #ffc107; 
        }
</style>
