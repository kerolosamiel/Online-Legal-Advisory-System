@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-[var(--primary-color)] to-[var(--second-color)] text-white py-20">
    <div class="cw mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold font-['Merriweather'] mb-6">
            Connect with Top Legal Professionals
        </h1>
        <p class="text-xl mb-8 opacity-90">
            Your Gateway to Expert Legal Services & Career Opportunities
        </p>
        <div class="flex justify-center gap-4">
            <a href="/Identity/Account/Register"
               class="bg-[var(--second-color)] text-white px-8 py-3 rounded-lg text-lg hover:bg-opacity-90 transition">
                Get Started
            </a>
            <a href="#features"
               class="bg-white text-[var(--primary-color)] px-8 py-3 rounded-lg text-lg hover:bg-gray-100 transition">
                Learn More
            </a>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section id="features" class="py-20 bg-[var(--accent)]">
    <div class="cw mx-auto px-4">
        <h2 class="text-3xl font-bold font-['Merriweather'] text-center mb-12">
            Why Choose LegalConnect?
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <div class="w-12 h-12 bg-[var(--second-color)] rounded-lg mb-4"></div>
                <h3 class="text-xl font-bold mb-3">Global Client Access</h3>
                <p class="text-[var(--secondary-text-color)]">Connect with clients worldwide and expand your legal
                    practice.</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <div class="w-12 h-12 bg-[var(--success)] rounded-lg mb-4"></div>
                <h3 class="text-xl font-bold mb-3">Case Management Tools</h3>
                <p class="text-[var(--secondary-text-color)]">Advanced tools to manage your cases and documents
                    efficiently.</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <div class="w-12 h-12 bg-[var(--warning)] rounded-lg mb-4"></div>
                <h3 class="text-xl font-bold mb-3">Secure Payments</h3>
                <p class="text-[var(--secondary-text-color)]">Reliable and secure payment system with transparent
                    fees.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-[var(--primary-color)] text-white">
    <div class="cw mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold font-['Merriweather'] mb-6">
            Ready to Elevate Your Legal Career?
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
            Join hundreds of successful lawyers already growing their practice with LegalConnect
        </p>
        <a href="/Identity/Account/Register"
           class="inline-block bg-[var(--second-color)] text-white px-10 py-4 rounded-xl text-lg hover:bg-opacity-90 transition transform hover:scale-105">
            Join Now - It's Free
        </a>
    </div>
</section>
