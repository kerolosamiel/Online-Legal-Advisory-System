@model ServiceOrder

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h3>Are you sure you want to delete this order?</h3>
    <dl class="row">
        <dt class="col-sm-2">Service:</dt>
        <dd class="col-sm-10">@Model.Service?.Title</dd>
        <dt class="col-sm-2">Client:</dt>
        <dd class="col-sm-10">@Model.Client?.ApplicationUser?.FirstName</dd>
        <dt class="col-sm-2">Amount:</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>