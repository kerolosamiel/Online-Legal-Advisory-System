@model List<Client>


@{
    ViewData["Title"] = "client confirmation";
}

<h2 class="mb-4">client confirmation</h2>

<div class="row">
    @foreach (var client in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-text">
                    <div>

                        <img src="@client.FrontCardImage" class="card-img-top rounded"/>

                    </div>
                    <div>

                        <img src="@client.BackCardImage" class="card-img-top rounded"/>

                    </div>
                    <div>
                        <label> Name: @client.ApplicationUser.FirstName </label>

                    </div>
                    <div>
                        <label>LastName: @client.ApplicationUser.LastName</label>

                    </div>

                    <div class="mt-3">


                        <a asp-action="Acceptclient" asp-route-id="@client.Id" class="btn btn-danger btn-sm">Accept</a>

                    </div>
                    <div class="mt-3">


                        <a asp-action="Rejectclient" asp-route-id="@client.Id" class="btn btn-danger btn-sm">Reject</a>

                    </div>


                </div>


            </div>
        </div>
    }
</div>

