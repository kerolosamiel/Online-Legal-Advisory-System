@model IEnumerable<Lawyer>

@{
    ViewData["Title"] = "Pending Lawyer Confirmations";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2>Pending Lawyer Verifications</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lawyer in Model)
        {
            <tr>
                <td>@lawyer.ApplicationUser?.FirstName @lawyer.ApplicationUser?.LastName</td>
                <td>@lawyer.ApplicationUser?.Email</td>
                <td>@lawyer.UserStatus</td>
                <td>
                    <a asp-action="AcceptLawyer" asp-route-id="@lawyer.Id" class="btn btn-success btn-sm">Accept</a>
                    <a asp-action="RejectLawyer" asp-route-id="@lawyer.Id" class="btn btn-danger btn-sm">Reject</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>