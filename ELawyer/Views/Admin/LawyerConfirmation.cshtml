@model List<Lawyer>


@{
    ViewData["Title"] = "Lawyer confirmation";
}

<h2 class="mb-4">Lawyer confirmation</h2>

<div class="row">
    @foreach (var lawyer in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@Url.Content("~/images/" + lawyer.FrontCardImage)"
                                 class="card-img-top rounded w-100"/>


                        </div>
                        <div class="col-md-6">
                            <img src="@Url.Content("~/images/" + lawyer.BackCardImage)"
                                 class="card-img-top rounded w-100"/>
                        </div>
                    </div>

                    <div class="mt-3">
                        <p><strong>Name:</strong> @lawyer.ApplicationUser.FirstName</p>
                        <p><strong>Last Name:</strong> @lawyer.ApplicationUser.LastName</p>

                    </div>
                    <div class="mt-3">


                        <a asp-action="Acceptlawyer" asp-route-id="@lawyer.Id" class="btn btn-danger btn-sm">Accept</a>

                    </div>
                    <div class="mt-3">


                        <a asp-action="Rejectlawyer" asp-route-id="@lawyer.Id" class="btn btn-danger btn-sm">Reject</a>

                    </div>
                </div>


            </div>
        </div>
    }
</div>


