@model Lawyer

@{
    ViewData["Title"] = "Verify Lawyer Account";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h3>Are you sure you want to verify this lawyer?</h3>
    <hr/>

    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.ApplicationUser?.FirstName @Model.ApplicationUser?.LastName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.ApplicationUser?.Email</dd>

        <dt class="col-sm-2">ID Front:</dt>
        <dd class="col-sm-10">
            <img src="~/@Model.FrontCardImage" class="img-thumbnail" width="200"/>
        </dd>

        <dt class="col-sm-2">ID Back:</dt>
        <dd class="col-sm-10">
            <img src="~/@Model.BackCardImage" class="img-thumbnail" width="200"/>
        </dd>
    </dl>

    <form asp-action="AcceptLawyer">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-success">Confirm Verification</button>
        <a asp-action="LawyerConfirmation" class="btn btn-secondary">Cancel</a>
    </form>
</div>