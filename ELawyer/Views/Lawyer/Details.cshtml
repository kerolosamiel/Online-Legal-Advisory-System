@model ELawyer.Models.ViewModels.ClientLawyerRating

<div class="cw mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <!-- Profile Header -->
        <div class="flex flex-col md:flex-row gap-8 mb-8">
            <img src="@Model.Lawyer.ImageUrl"
                 class="w-48 h-48 rounded-full object-cover border-4 border-[var(--second-color)]">
            <div class="flex-1">
                <h1 class="text-3xl font-bold font-['Merriweather']">@Model.Lawyer.ApplicationUser.FirstName</h1>
                <div class="text-xl text-[var(--secondary-text-color)] mb-4">@Model.Lawyer.About</div>
                <div class="flex items-center gap-2 mb-4">
                    <div class="text-2xl text-[var(--warning)]">★ @Model.Lawyer.AverageRateing.ToString()</div>
                    <span class="text-[var(--secondary-text-color)]">(@Model.Rating.Count() reviews)</span>
                </div>
                <div class="flex gap-4">
                    <a href="#contact"
                       class="bg-[var(--second-color)] text-white px-6 py-2 rounded-lg hover:bg-opacity-90">
                        Contact Lawyer
                    </a>
                    <a href="#reviews"
                       class="border-2 border-[var(--dark)] text-[var(--dark)] px-6 py-2 rounded-lg hover:bg-[var(--accent)]">
                        See Reviews
                    </a>
                </div>
            </div>
        </div>

        <!-- Specializations -->
        <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Areas of Expertise</h2>
            <div class="flex flex-wrap gap-3">
                @foreach (var spec in Model.Lawyer.LawyerSpecializations)
                {
                    <div class="px-4 py-2 bg-[var(--accent)] rounded-full">
                        @spec.Specialization.Name
                    </div>
                }
            </div>
        </div>

        <!-- Reviews Section -->
        <div id="reviews" class="pt-8 border-t">
            <h2 class="text-2xl font-bold mb-6">Client Reviews</h2>
            <div class="space-y-6">
                @foreach (var review in Model.Rating)
                {
                    <div class="bg-[var(--accent)] p-4 rounded-lg">
                        <div class="flex items-center gap-4 mb-2">
                            <div
                                class="font-bold">@review.Client.ApplicationUser.FirstName @review.Client.ApplicationUser.LastName</div>
                            <div class="text-[var(--warning)]">★ @review.Rate</div>
                        </div>
                        <p class="text-[var(--secondary-text-color)]">@review.Comment</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>