@model IEnumerable<Lawyer>

@{
    ViewData["Title"] = "Top Legal Professionals";
}

<div class="cw mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold font-['Merriweather'] mb-8 text-[var(--primary-color)]">
        Meet Our Verified Lawyers
    </h1>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var lawyer in Model)
        {
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition">
                <div class="h-48 bg-gray-200 relative">
                    <img src="@lawyer.ImageUrl" class="w-full h-full object-cover"
                         alt="@lawyer.ApplicationUser.FirstName">
                    <div
                        class="absolute bottom-4 right-4 bg-[var(--second-color)] text-white px-4 py-1 rounded-full text-sm">
                        ★ @lawyer.AverageRateing.ToString()
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">@lawyer.ApplicationUser.FirstName @lawyer.ApplicationUser.LastName</h3>
                    <div class="flex flex-wrap gap-2 mb-4">
                        @foreach (var spec in lawyer.LawyerSpecializations)
                        {
                            <span class="px-3 py-1 bg-[var(--accent)] text-sm rounded-full">
                                @spec.Specialization.Name
                            </span>
                        }
                    </div>
                    <a asp-action="Details" asp-route-id="@lawyer.Id"
                       class="inline-block w-full text-center bg-[var(--primary-color)] text-white px-6 py-2 rounded-lg hover:bg-opacity-90 transition">
                        View Profile
                    </a>
                </div>
            </div>
        }
    </div>
</div>