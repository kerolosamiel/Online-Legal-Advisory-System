@model ELawyer.Models.ViewModels.LawyerEditViewModel

<div class="cw mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold font-['Merriweather'] mb-8">Edit Profile</h1>

        <form asp-action="Edit" enctype="multipart/form-data" class="space-y-6">
            <!-- Profile Image Upload -->
            <div class="border-b pb-6">
                <label class="block text-lg font-medium mb-4">Profile Image</label>
                <div class="flex items-center gap-6">
                    <img src="@Model.Lawyer.ImageUrl" class="w-32 h-32 rounded-full object-cover">
                    <input type="file" name="file"
                           class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-[var(--accent)] file:text-[var(--primary-color)] hover:file:bg-[var(--second-color)] hover:file:text-white">
                </div>
            </div>

            <!-- Form Fields -->
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium mb-2">Full Name</label>
                    <input asp-for="Lawyer.ApplicationUser.FirstName"
                           class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[var(--second-color)] focus:border-transparent">
                </div>

                <!-- Specializations Multi-select -->
                <div>
                    <label class="block text-sm font-medium mb-2">Specializations</label>
                    <select asp-for="SelectedSpecialization" multiple
                            class="w-full px-4 py-2 border rounded-lg h-48 overflow-auto"
                            asp-items="@Model.SpecializationList">
                    </select>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-6 border-t">
                <button type="submit"
                        class="bg-[var(--success)] text-white px-8 py-3 rounded-lg hover:bg-opacity-90 transition">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>